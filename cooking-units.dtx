%   \begin{syntax}
%     \mycs{declarecookingunit}\oarg{symbol}\marg{unit-key}
%     \mycs{newcookingunit}\oarg{symbol}\marg{new-unit-key}
%     \mycs{providecookingunit}\oarg{symbol}\marg{new-unit-key}
