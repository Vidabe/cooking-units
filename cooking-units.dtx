    \tl_if_empty:nF {#3}
      {
        \prg_new_conditional:cpnn { @@_if_ #2 _equal:n } ##1 {#3}
          {
            \tl_if_exist:cF { c_@@_#2_ ##1 _tl } 
              { \msg_error:nnnn {cooking-units }  { internal-error } { Type-2 } { ERROR-set-#2-##1 } }
            \tl_if_eq:NcTF #1 { c_@@_#2_ ##1 _tl } 
              { \prg_return_true: }
              { \prg_return_false: }
          }
      }
  }
