%  round the input. 
%    \begin{macrocode}
\cs_new:Npn \@@_check_number_after_dot_aux:ww #1 . #2 .
  {
    \quark_if_recursion_tail_stop:n {#2}
    \int_compare:nNnT
      { \tl_count:n {#2} } >
      { \l_@@_round_precision_int }
      { \bool_set_true:N  \l_@@_round_number_bool }
    \use_none_delimit_by_q_recursion_stop:w
  }
