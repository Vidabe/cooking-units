        \char_set_catcode_other:N ? %
      } \l_@@_original_amount_tl
    \bool_lazy_any:nTF
      {
        { \tl_if_empty_p:N \l_@@_original_amount_tl }
        { \l_@@_pckopt_draft_bool }
      }
      { \@@_prepare_just_print_input: }
      { \@@_split_and_parse_input: }
  }
