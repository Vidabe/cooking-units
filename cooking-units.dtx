% \begin{macro}{ \@@_split_and_parse_number:n }
% Gets the input , parses it and stores it into |\l_@@_number_tmpa_tl|.
%    \begin{macrocode}
\cs_new:Npn \@@_split_and_parse_number:n #1
  {
    \@@_parse_input_and_safe_in:nN {#1} \l_@@_number_tmpa_tl
  }
%    \end{macrocode}
% \end{macro}
