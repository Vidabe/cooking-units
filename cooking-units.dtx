    \bool_if:NTF \l_@@_use_singular_bool
      { \prop_get:NnN \l_@@_phrase_prop { #1 } \l_@@_phrase_text_tl }
      { \prop_get:NnN \l_@@_phrase_prop { #1 - pl } \l_@@_phrase_text_tl }
    \prop_get:NnN \l_@@_phrase_prop { #1 - gender } \l_@@_phrase_gender_tl
  }
%    \end{macrocode}
