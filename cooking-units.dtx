              { \@@_rf_cuam_post_process_input_phrases:NN #1 \l_@@_numbers_to_check_seq }
            \bool_if:NT \l_@@_lokal_numeral_bool
              { \@@_rf_check_if_numerals_can_be_used:N \l_@@_numbers_to_check_seq }
          }
      }
